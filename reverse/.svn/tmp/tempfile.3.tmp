project(reverse) : install_lib, install_headers {
	sharedname = reverse
	after = api data_types components infrastructure io meta
    includes += $(top_srcdir)

	libs = api data_containers components infrastructure io meta io_elf io_windows_pe io_java_class io_mach io_readers reverse_exceptions comp_input comp_output inf_data_source inf_visitor 

	lit_libs = icui18n expat boost_filesystem gcov


    specific(vc8) {
	dynamicflags += _SCL_SECURE_NO_WARNINGS
	staticflags += _SCL_SECURE_NO_WARNINGS
    }

	Source_Files {
		Reverse.cpp
        Trace.cpp
		sp_debug_hooks.cpp
	}

	Header_Files {
	        Assert.h
		Reverse.h
      	        Trace.h
	}
}
