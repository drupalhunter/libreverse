#ifndef DATA_SOURCE_H
#define DATA_SOURCE_H

#include "Data_Source_Base.h"
#include "libreverse/data_containers/Data_Types.h"
#include "libreverse/infrastructure/Component_Types.h"

namespace libreverse { namespace infrastructure {

    template <typename Transfer_Type>
    class Data_Source : public Data_Source_Base,
                        public boost::enable_shared_from_this< Data_Source < Transfer_Type > >
    {
    public:

        explicit Data_Source ( typename boost::shared_ptr<Transfer_Type> trans_method);

        Data_Source ( Data_Source const& rhs );

        virtual ~Data_Source ();

        void put ( infrastructure_types::Data_Object::const_ptr_t data);

        infrastructure_types::Data_Object::const_ptr_t get (void) const;

        virtual std::string to_String (void) const;

        virtual typename infrastructure_types::Data_Source_Base::ptr_t get_Deep_Copy ( void ) const;

        Data_Source& operator= ( Data_Source const& rhs );
            
        void swap ( Data_Source& rhs );

    private:

        /**
         * Fields
         */
        infrastructure_types::Data_Object::ptr_t m_data_ptr;

        typename boost::shared_ptr<Transfer_Type> m_transfer_method;
    };
} /* namespace infrastructure */
} /* namespace libreverse */

#include "Data_Source_T.cpp"

#endif //DATA_SOURCE_H

