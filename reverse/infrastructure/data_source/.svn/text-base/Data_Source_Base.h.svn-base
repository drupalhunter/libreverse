#ifndef DATA_SOURCE_BASE_H
#define DATA_SOURCE_BASE_H

#include <boost/shared_ptr.hpp>
#include "libreverse/infrastructure/Component_Types.h"

namespace libreverse { namespace infrastructure {

    class Data_Source_Base {
    public:

        virtual ~Data_Source_Base(){}

        /**
         *
         */
        virtual infrastructure_types::Data_Object::const_ptr_t get () const = 0;

        /**
         *
         * @param data
         */
        virtual void put ( infrastructure_types::Data_Object::const_ptr_t data) = 0;

        /**
         * \brief Debug data structure by dumping contents to standard out.
         */
        virtual std::string to_String (void) const = 0;

        /**
         * \brief Provide a deep copy of the object implementing Data_Source_Base
         */
        virtual infrastructure_types::Data_Source_Base::ptr_t get_Deep_Copy ( void ) const = 0;
    };

} /* namespace infrastructure */
} /* namespace libreverse */

#endif /* DATA_SOURCE_BASE_H */

