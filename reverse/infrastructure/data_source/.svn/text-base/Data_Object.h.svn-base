#ifndef DATA_OBJECT_H
#define DATA_OBJECT_H

#include <boost/shared_ptr.hpp>
#include <string>
#include "libreverse/data_containers/Data_Types.h"
#include "libreverse/meta/Meta_Object.h"

namespace libreverse { namespace infrastructure {

        class Data_Object
        {
        public:

            explicit Data_Object ();

            explicit Data_Object ( Data_Object const& rhs );

            ~Data_Object(){}
            
            meta::Meta_Object::const_ptr_t getMeta() const;

            void set_Data ( data_types::Filename::const_ptr_t data );

            void set_Data ( data_types::Control_Flow_Graph_Sequence::const_ptr_t data );

            void set_Data ( data_types::Memory_Map::const_ptr_t data );

            void put_Meta ( meta::Meta_Object::const_ptr_t meta_ptr );

            data_types::Filename::const_ptr_t get_Filename ( void ) const;

            data_types::Control_Flow_Graph_Sequence::const_ptr_t get_Control_Flow_Graph_Sequence (void) const;

            data_types::Memory_Map::const_ptr_t get_Memory_Map () const;

            std::string to_String (void) const;

            Data_Object& operator= ( Data_Object const& rhs );
            
            void swap ( Data_Object& rhs );
            
        private:

            meta::Meta_Object::const_ptr_t m_meta;
            data_types::Filename::const_ptr_t m_filename;
            data_types::Control_Flow_Graph_Sequence::const_ptr_t m_graph;
            data_types::Memory_Map::const_ptr_t m_map;
        };
    } /* namespace infrastructure */
} /* namespace libreverse */

#endif //DATA_OBJECT_H
