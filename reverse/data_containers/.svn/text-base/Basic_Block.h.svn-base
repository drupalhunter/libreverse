#ifndef BASIC_BLOCK_H
#define BASIC_BLOCK_H

#include "libreverse/data_containers/Data_Types.h"

#include <boost/cstdint.hpp>
#include <vector>

namespace libreverse { namespace data_container {

  class Basic_Block {
  public:

    Basic_Block ( boost::uint32_t id,
		  boost::uint32_t type );

    boost::uint32_t get_ID () const;

    void add_Line ( data_types::Instruction::ptr_t input_line );

    void add_Comment ( std::string comment );

    data_types::Basic_Block::DataList_t::iterator begin();

    data_types::Basic_Block::DataList_t::iterator end();

    std::string to_String (void) const;

  private:

    boost::uint32_t m_id;

    boost::uint32_t m_type;

    data_types::Basic_Block::DataList_t m_instructions;
    
    std::vector<std::string> m_comments;
  };

}  /* namespace data_container */
} /* namespace libreverse */


#endif /* BASIC_BLOCK_H */
