#ifndef ELF_READER_H_
#define ELF_READER_H_

#include "Elf_Types.h"
#include "libreverse/io/IO_Types.h"
#include "libreverse/io/input/File_Readers/File_Reader.h"
#include <string>

namespace libreverse
{
    namespace elf_module
    {

        /*!
         * \class Elf_Reader
         * \date 2003
         * \author Stephen Torri
         */
        template <boost::uint32_t size>
        class Elf_Reader : public io::File_Reader
        {
            public:

                /*!
                 * \brief Default Constructor
                 * \param target_file The file to be used for decompiling
                 */
                Elf_Reader ( typename io_types::File_ID::ptr_t target_file );

                /*!
                 * \brief Default Destructor
                 */
                virtual ~Elf_Reader();

                /*!
                 * \brief Return the bit size of the header (e.g. 32-bit)
                 * \return Bit size of header
                 */
                virtual boost::uint32_t get_size ( void );

                /*! \brief Elf_Header reference for this reader */
                typename elf_types::Elf_Header<size>::ptr_t get_Header ( void );

                virtual bool support_File_Type ( void );

                /*!
                 * \brief Get request the meta information for the action
                 */
                virtual std::string get_Meta_Info ( File_Reader::Action index,
                                                    std::string name = "" );

                virtual void read_Headers ( void );

                virtual typename data_types::Memory_Map::ptr_t get_Memory_Map ( void );

                virtual std::string to_String ( void );

                virtual io_types::Text_Data::data_type get_Text_Strings ( void );

                virtual io_types::Text_Data::data_type get_UTF16_Strings ( void );

                /*---------------
                 *   Functions
                 *---------------*/

                /*!
                 * \brief Get the Elf File Header from the file
                 */
                void read_File_Header ( void );

                /*!
                 * \brief Get the Elf Program Headers from the file
                 */
                void read_Program_Headers ( void );

                /*!
                 * \brief Return the File Type of the target file
                 */
                std::string const get_File_Type ( void );

                /* !\brief Return the Architecture Type of the target file */
                std::string const get_Arch_Type ( void );

                /* !\brief Return the offset for a section header */
                std::string const get_Section_Offset ( std::string name );

                /* !\brief Return the offset for a section length */
                std::string const get_Section_Length ( std::string name );

                /*!
                 * \brief Return the Entry Point of the target file
                 */
                std::string const get_Entry_Point ( void );

                /*!
                 * \brief Return the Base Address of the target file
                 */
                std::string const get_Base_Address ( void );

                /*!
                 * \brief Get the Section Headers from the file
                 */
                void read_Section_Headers ( void );

                /*!
                 * \brief Get the Dynamic Headers from the file
                 */
                void read_Dynamic_Headers ( void );

                /*!
                 * \brief Get the Symbols from the Symbols Token of the file
                 */
                void read_Symbol_Token ( void );

                /*!
                 * \brief Get the Relocation Headers from the file
                 */
                void read_Relocations ( void );

                /*!
                 * \brief Get the Relocation headers (SHT_REL)
                 */
                void read_Relocation_Headers ( typename elf_types::Elf_Section_Header<size>::ptr_t sec_hdr,
                                               typename elf_types::Elf_File_Header<size>::ptr_t file_hdr );

                /*!
                 * \brief Get the Relocation Addend headers (SHT_RELA)
                 */
                void read_Relocation_Addend_Headers ( typename elf_types::Elf_Section_Header<size>::ptr_t sec_hdr,
                                                      typename elf_types::Elf_File_Header<size>::ptr_t file_hdr );

                /*!
                 * \brief Get the Relocation symbols
                 */
                void read_Relocation_Symbols ( typename elf_types::Elf_Section_Header<size>::ptr_t sec_hdr,
                                               typename elf_types::Elf_File_Header<size>::ptr_t file_hdr );

                virtual std::string get_Section_String ( std::string name ) const;

                virtual std::string get_String_Name ( boost::uint32_t index ) const;

                void set_Symbol_Name ( typename elf_types::Elf_Symbol<size>::ptr_t symbol_ptr );

            private:

                /*---------------
                 *   Variables
                 *---------------*/
                /*! \brief Elf File handle */
                typename elf_types::Elf_File<size>::ptr_t m_elf_file;

                /*! \brief Conversion of data read is required */
                bool m_convert;

                typename elf_types::Elf_Header<size>::ptr_t m_elf_data;

                data_types::Memory_Map::ptr_t m_string_table_ptr;
        };

    } /* namespace elf_module */
} /* namespace libreverse */

/* Include Source */
#include "Elf_Reader_T.cpp"

#endif /* ELF_READER_H_ */
