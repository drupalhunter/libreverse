#include "Fvmfile_Command.h"
#include "LC_Str.h"
#include "libreverse/io/Byte_Converter.h"
#include <boost/format.hpp>
#include <sstream>

namespace libreverse
{
    namespace mach_module
    {

        Fvmfile_Command::Fvmfile_Command ( boost::uint32_t cmd, boost::uint32_t cmdsize )
                : m_cmd ( cmd ),
                m_cmdsize ( cmdsize ),
                m_name ( new LC_Str() ),
                m_header_addr ( 0 )
        {}

        void
        Fvmfile_Command::convert ( bool need_convert )
        {
            if ( need_convert )
            {
                io::Byte_Converter::convert ( m_cmd );
                io::Byte_Converter::convert ( m_cmdsize );
                m_name->convert ( need_convert );
                io::Byte_Converter::convert ( m_header_addr );
            }
        }

        std::string
        Fvmfile_Command::to_String ( void )
        {
            std::stringstream output;

            output << "Fvmfile Command:" << std::endl
            << boost::format ( "  Command Id: %1%" ) % m_cmd << std::endl
            << boost::format ( "  Command Size: %1%" ) % m_cmdsize << std::endl
            << m_name->to_String() << std::endl
            << boost::format ( "  Header address: 0x%1$X" ) % m_header_addr;

            return output.str();
        }

    } /* namespace mach_module */
} /* namespace libreverse */
