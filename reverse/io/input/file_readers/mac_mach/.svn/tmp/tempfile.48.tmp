#include "Sub_Client_Command.h"
#include "libreverse/io/Byte_Converter.h"
#include <sstream>
#include <boost/format.hpp>
#include "LC_Str.h"

namespace libreverse
{
    namespace mach_module
    {

        Sub_Client_Command::Sub_Client_Command ( boost::uint32_t cmd, boost::uint32_t cmdsize )
            : m_cmd ( cmd ),
              m_cmdsize ( cmdsize )
        {}

        void
        Sub_Client_Command::convert ( bool )
        {}

        std::string
        Sub_Client_Command::to_String ( void )
        {
            std::stringstream output;

            output << "Sub Client Command:" << std::endl
            << boost::format ( "  Command Id: %1%" ) % m_cmd << std::endl
            << boost::format ( "  Command Size: %1%" ) % m_cmdsize << std::endl
            << m_client->to_String();

            return output.str();
        }
    } /* namespace mach_module */
} /* namespace libreverse */
